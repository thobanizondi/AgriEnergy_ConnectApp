@model AgriEnergy_ConnectApp.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="card shadow mt-4">
    <div class="card-header bg-primary text-white">
        <h4>Create Product</h4>
    </div>
    <div class="card-body">
        <form asp-action="CreateProduct" method="post">
            @Html.AntiForgeryToken()

            <!-- Display Error Message -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Farmer Dropdown -->
            <div class="mb-3">
                <label asp-for="FarmerId" class="form-label">Select Farmer</label>
                <select asp-for="FarmerId" class="form-control" asp-items="ViewBag.FarmerList"></select>
                <span asp-validation-for="FarmerId" class="text-danger"></span>
            </div>

            <!-- Product Name -->
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- Product Type -->
            <div class="mb-3">
                <label asp-for="ProductType" class="form-label"></label>
                <input asp-for="ProductType" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Quantity -->
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Create Product</button>
                <a asp-controller="User" asp-action="EmployeeDashboard" class="btn btn-secondary">Back</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
