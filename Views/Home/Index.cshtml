@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <!-- Welcome Section -->
    <div class="jumbotron bg-light p-5 shadow rounded">
        <h1 class="display-5" style="color: #2c3e50;">Welcome to <span style="color: #27ae60;">🌿 AgriEnergy Connect+</span>!</h1>
        <p class="lead" style="color: #34495e;">Empowering employees to efficiently manage farmers and their products for a sustainable agricultural future.</p>
        <hr class="my-4">
        <p style="color: #7f8c8d;">Explore the features of the platform to get started.</p>
    </div>

    <!-- Features Section -->
    <div class="mt-5">
        <h2 style="color: #2980b9;">Our Features</h2>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #e74c3c;">🌿Farmer Management</h5>
                        <p class="card-text" style="color: #8e44ad;">Add, edit, and manage farmers with ease. Keep track of all their details in one place.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #f39c12;">🌿Product Management</h5>
                        <p class="card-text" style="color: #d35400;">Farmers can add and manage products seamlessly with our user-friendly interface.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #16a085;">🌿Analytics & Insights</h5>
                        <p class="card-text" style="color: #2ecc71;">Gain valuable insights into farmer and product data to make informed decisions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-5 text-center text-muted">
        <p>&copy; 2025 🌿 AgriEnergy Connect+. All rights reserved.</p>
    </footer>
</div>
